<%= render 'components/navbar' %>
<h2 class='section-headline'>Share your capybara with the world!</h2>

<div class="form-container new-capybara">
    <%= simple_form_for(@capybara) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
        <%= f.input :address %>
        <%= f.input :price %>
       <%= f.input :photo, as: :file %>
      <%= f.submit 'Add your capybara', class: "booking-button btn btn-success"%>
    <% end %>
</div>
